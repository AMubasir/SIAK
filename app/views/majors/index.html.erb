<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-centered">
      <div class="panel panel-primary">

        <!--PANEL HEADING-->
        <div class="panel-heading">
          <h4 style="text-align: center;">Listing Majors</h4>
        </div>

        <!--PANEL BODY-->
        <div class="panel-body">
          <table class="table">
            <thead>
              <tr>
                <th>Name</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @majors.each do |major| %>
                <tr>
                  <td><%= major.name %></td>
                  <td><%= link_to "<i class=\"glyphicon glyphicon-folder-open\" style=\"color:#FEBD4D\"></i>".html_safe, major %></td>
                  <td><%= link_to "<i class=\"glyphicon glyphicon-pencil\" style=\"color:blue\"></i>".html_safe, edit_major_path(major)%></td>
                  <td><%= link_to "<i class=\"glyphicon glyphicon-remove\" style=\"color:red\"></i>".html_safe, major, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="panel-footer">
          <div class="pull-right">
            <%= link_to 'New Major', new_major_path, class: 'btn btn-sm btn-info' %>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>