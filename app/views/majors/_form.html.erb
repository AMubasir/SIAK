            <div class="form-group">
              <%= f.label :name %><br>
              <%= f.text_field :name, class: 'form-control' %>
            </div>          
          </div>

          <div class="panel-footer">
            <div class="pull-right">
              <%= f.submit "Submit", class: 'btn btn-sm btn-info' %>            
              <%= link_to "Back", majors_path, class: 'btn btn-sm btn-info' %>            
            </div>
          </div>

        </div>
      </div>
    </div>
